# .env (in your PHP project root)

# Database Credentials (replace with your actual values)
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASS=your_db_password

# Third-Party API Keys (example)
STRIPE_SECRET_KEY=sk_test_********************
SENDGRID_API_KEY=SG.********************
AWS_S3_KEY=AKIA********************
AWS_S3_SECRET=****************************************

# JWT Secret (if you're using JWTs for authentication)
JWT_SECRET=a_very_long_and_random_string_for_jwt_signing_1234567890

# CORS Allowed Origins (for production, be specific)
# This is used by your PHP backend to allow your frontend domain
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-domain.com